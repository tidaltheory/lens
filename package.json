{
  "name": "@tidaltheory/lens",
  "version": "1.0.0",
  "description": "Optimise & thumbnail images, and store metadata",
  "keywords": [
    "sharp",
    "image",
    "optimization",
    "metadata",
    "lqip",
    "cli"
  ],
  "license": "ISC",
  "author": "Jeff Nelson (https://tidaltheory.io)",
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts"
      }
    }
  },
  "types": "types/index.d.ts",
  "bin": {
    "lens": "bin/index.js"
  },
  "files": [
    "bin",
    "dist",
    "types"
  ],
  "scripts": {
    "_build": "tsdx build --entry src/cli.ts --target node --format cjs",
    "build": "npm run setup && npm run build:bundle",
    "build:bundle": "esbuild src/cli.ts --bundle --platform=node --target=node16 --external:sharp --outfile=dist/index.js",
    "changeset": "changeset add",
    "lint": "npm run setup && eslint .",
    "prepare": "husky install",
    "release": "npm run build && changeset publish",
    "setup": "zazen configure"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "package.json": "prettier --write"
  },
  "dependencies": {
    "globby": "13.1.2",
    "is-plain-object": "5.0.0",
    "lowdb": "3.0.0",
    "multimatch": "6.0.0",
    "node-vibrant": "3.2.1-alpha.1",
    "ora": "6.1.2",
    "pkg-conf": "4.0.0",
    "sade": "1.8.1",
    "sharp": "0.30.7"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.3",
    "@changesets/cli": "2.21.0",
    "@types/eslint": "8.4.5",
    "@types/node": "17.0.15",
    "@types/sharp": "0.30.5",
    "@zazen/cli": "0.4.2",
    "esbuild": "0.15.1",
    "eslint": "8.21.0",
    "husky": "8.0.1",
    "import-sort-style-python": "1.0.2",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.2.18",
    "tsdx": "0.14.1",
    "tslib": "2.1.0",
    "type-fest": "2.18.0",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "python"
    },
    ".ts": {
      "parser": "typescript",
      "style": "python"
    }
  }
}
